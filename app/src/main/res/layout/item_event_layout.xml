<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="#C1C1C1"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:id="@+id/open_event"
    >

      <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:id="@+id/click_event"
          >


          <ImageView
              android:id="@+id/img_event"
              android:layout_width="100dp"
              android:layout_height="100dp"
              android:layout_marginStart="40dp"
              android:layout_marginTop="10dp"
              android:layout_marginEnd="10dp"
              android:layout_marginBottom="10dp"
              android:contentDescription="@string/app_name"
              android:padding="5dp"
              android:src="@drawable/ic_account" />

         <TextView
              android:id="@+id/tittle_event"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginStart="10dp"
              android:layout_marginTop="16dp"
              android:layout_toEndOf="@id/img_event"
              android:textColor="@color/black"
              android:textSize="18sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/location_event"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_below="@id/tittle_event"
              android:layout_marginStart="10dp"
              android:layout_marginTop="16dp"
              android:layout_toEndOf="@id/img_event"
              />

      </RelativeLayout>
</androidx.cardview.widget.CardView>
